<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="light dark">
    <meta name="description"
          content="DataStar ASP.NET Core example projects showcasing various web development approaches and data visualizations">
    <link rel="stylesheet" href="~/css/pico.classless.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <title>DataStar ASP.NET Core Examples</title>
    <script src="https://cdn.jsdelivr.net/gh/starfederation/datastar@v1.0.0-beta.2/bundles/datastar.js"
            type="module"></script>
    <script>
      window.addEventListener('load', () => {
        const navContainer = document.querySelector('.nav-container');
        const activeItem = document.querySelector('.nav-item.active');
        
        if (activeItem && navContainer) {
            // Scroll active item into view
            activeItem.scrollIntoView({ 
                block: 'nearest',
                inline: 'center'
            });
            
            // Check scroll position and update indicators
            const checkScroll = () => {
                const { scrollLeft, scrollWidth, clientWidth } = navContainer;
                
                // Remove all scroll classes
                navContainer.classList.remove('scroll-start', 'scroll-end', 'can-scroll');
                
                // Add appropriate scroll classes
                if (scrollWidth > clientWidth) {
                    navContainer.classList.add('can-scroll');
                    
                    if (scrollLeft <= 0) {
                        navContainer.classList.add('scroll-start');
                    }
                    if (scrollLeft + clientWidth >= scrollWidth) {
                        navContainer.classList.add('scroll-end');
                    }
                }
            };
            
            // Check scroll on load
            checkScroll();
            
            // Check scroll on scroll event
            navContainer.addEventListener('scroll', checkScroll);
            
            // Check scroll on resize
            window.addEventListener('resize', checkScroll);
        }
      });
    </script>
</head>
<body>
<main id="main-content" class="container">
    <div class="header-container" role="banner">
        <div class="header-logos">
            <a href="https://data-star.dev" aria-label="View DataStar Examples on GitHub">
                <img src="~/img/rocket.webp" alt="DataStar logo" width="40" height="40">
            </a>
            <a href="https://github.com/RickTheHat/DataStarExamples" aria-label="Visit Rick's GitHub profile">
                <img src="~/img/rick.jpg" alt="Author profile" width="40" height="40" class="profile">
            </a>
        </div>
        <h1>
            <a href="/" style="text-decoration: none; color: inherit;">
                DataStar ASP.NET Core Examples
            </a>
        </h1>
    </div>
    @RenderBody()
</main>
</body>
</html>
