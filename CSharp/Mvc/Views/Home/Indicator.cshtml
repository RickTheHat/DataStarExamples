@{
    ViewData["Title"] = "Indicator (ASP.NET MVC)";
}

<div class="demo-section">
    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="FileUpload" class="demo-nav-link">
            ← PREVIOUS: FILE UPLOAD
        </a>
        <a asp-controller="Home" asp-action="InfiniteScroll" class="demo-nav-link">
            NEXT: INFINITE SCROLL →
        </a>
    </div>

    <section id="example">
        <h2>Indicator (ASP.NET MVC)</h2>
        <p>Indicator demonstration will go here...</p>
        <div class="demo-content" role="region" aria-label="Demo visualization">
            <div
                class="indicator"
                data-class="{loading: $fetching}"
            >
                Loading Indicator
            </div>
            <button
                id="greetingBtn"
                data-indicator-fetching
                data-on-click="@@get('Home/FetchIndicator')"
                data-attr-disabled="$fetching"
            >
                Click me for a greeting
            </button>
            <div id="greeting"></div>
        </div>
        <style>
            .indicator {
                opacity:0;
                transition: opacity 300ms ease-out;
            }
            .indicator.loading {
                opacity:1;
                transition: opacity 300ms ease-in;
            }
        </style>
    </section>

    <div style="display: flex; justify-content: space-between; gap: 1rem;">
        <a asp-controller="Home" asp-action="FileUpload" class="demo-nav-link">
            ← PREVIOUS: FILE UPLOAD
        </a>
        <a asp-controller="Home" asp-action="InfiniteScroll" class="demo-nav-link">
            NEXT: INFINITE SCROLL →
        </a>
    </div>
</div>

@await Html.PartialAsync("_MoreExamples")